<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#1d953f" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="按键设置" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#74787c"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="20dip" >

        <ImageView
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ico_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="百度搜索" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gesture_short1_on" />
    </LinearLayout>
      <LinearLayout
          android:id="@+id/layout2"
          android:layout_marginTop="1dip"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#74787c"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="20dip" >

        <ImageView
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ico_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="电话本" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gesture_short2_on" />
    </LinearLayout>
      <LinearLayout
          android:id="@+id/layout3"
          android:layout_marginTop="1dip"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#74787c"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="20dip" >

        <ImageView
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ico_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="照相机" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gesture_short3_on" />
    </LinearLayout>
      <LinearLayout
          android:id="@+id/layout4"
          android:layout_marginTop="1dip"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#74787c"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="20dip" >

        <ImageView
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ico_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设置" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gesture_short4_on" />
    </LinearLayout>
    
</LinearLayout>